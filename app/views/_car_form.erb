<h3>Input your vehicle:</h3>

<form action='/cars' method='post'>
	<label for='years'>Year:</label>
	<select class='year-select' name='years'>
		<option selected disabled hidden></option>
	<% year = 2016 %>
		<% while year > 1950 %>
		<option value='<%=year%>'><%=year%></option>
		<% year -= 1 %>
		<% end %>
	</select>
	<br>
	<label for='makes' class='make-select hidden'>Make:</label>
	<select class='make-select hidden' name='makes'>
		<option selected disabled hidden></option>
	</select>
	<br>
	<label for='models' class='model-select hidden'>Model:</label>
	<select class='model-select hidden' name='models'>
		<option selected disabled hidden></option>
	</select>
	<br>
	<label for='trims' class='trim-select hidden'>Trim Level:</label>
	<select class='trim-select hidden' name='style_id'></select>
	<br>
	<input type='submit' value='submit' class='hidden'>
</form>
